@model TimeTableGenerator.Models.TimeTableSubjectModel
<style>
    .form-group{ padding-bottom: 10px !important
    }
</style>
<h2>Add Your Inputs</h2>

<form asp-action="SubjectHours" method="post">
    <div class="form-group">
        <label>Number of Working Days</label>
        <input asp-for="WorkingDays" class="form-control" />
        <span asp-validation-for="WorkingDays" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Number of Subjects per Day</label><br />
        <input asp-for="SubjectsPerDay" class="form-control" />
        <span asp-validation-for="SubjectsPerDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Total Number of Subjects</label><br />
        <input asp-for="TotalSubjects" class="form-control" />
        <span asp-validation-for="TotalSubjects" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Total Hours per Week: </label>
        <span id="totalHours">@Model.TotalHours</span>
    </div>

    <button type="submit" class="btn btn-outline-success">Next</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('input').on('input', function() {
                var days = parseInt($('#WorkingDays').val()) || 0;
                var subjects = parseInt($('#SubjectsPerDay').val()) || 0;
                $('#totalHours').text(days * subjects);
            });
        });
    </script>
}